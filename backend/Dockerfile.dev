# ROOT CAUSE FIX: Switched from Alpine to Debian Slim
# Alpine requires compiling LLVM/Clang (6+ minutes), Debian has pre-built packages
FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies
# Debian has pre-built packages (no compilation needed)
RUN apt-get update && apt-get install -y --no-install-recommends \
    postgresql-client \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy pyproject.toml (BuildWorks.AI Compliance: pyproject.toml is MANDATORY, requirements.txt is FORBIDDEN)
COPY pyproject.toml /app/

# Install Python dependencies using pyproject.toml
# Debian Slim has pre-built wheels for all packages
# Extract and install dependencies from pyproject.toml (package source not needed yet)
RUN pip install --upgrade pip setuptools wheel && \
    python3 -c "import tomllib; f=open('pyproject.toml','rb'); d=tomllib.load(f); deps = d['project']['dependencies'] + d['project']['optional-dependencies']['dev']; [print(dep) for dep in deps]" | \
    pip install -r /dev/stdin && \
    rm -rf /root/.cache/pip

# Copy project
COPY . /app/

# Make entrypoint script executable
RUN chmod +x /app/entrypoint.sh

# Set entrypoint to handle migrations automatically
ENTRYPOINT ["/bin/bash", "/app/entrypoint.sh"]
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
