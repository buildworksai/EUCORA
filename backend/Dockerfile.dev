# ROOT CAUSE FIX: Switched from Alpine to Debian Slim
# Alpine requires compiling LLVM/Clang (6+ minutes), Debian has pre-built packages
FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies
# Debian has pre-built packages (no compilation needed)
RUN apt-get update && apt-get install -y --no-install-recommends \
    postgresql-client \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy requirements directory (for Docker layer caching)
COPY requirements/ /app/requirements/

# Install Python dependencies
# Debian Slim has pre-built wheels for all packages
RUN pip install --upgrade pip && \
    pip install -r requirements/development.txt && \
    rm -rf /root/.cache/pip

# Copy project
COPY . /app/

# Make entrypoint script executable and install psycopg2 for connection testing
RUN chmod +x /app/entrypoint.sh && \
    pip install psycopg2-binary

# Set entrypoint to handle migrations automatically
ENTRYPOINT ["/bin/bash", "/app/entrypoint.sh"]
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
